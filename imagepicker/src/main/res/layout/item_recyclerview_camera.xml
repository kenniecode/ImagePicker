<?xml version="1.0" encoding="utf-8"?>
<com.kennie.library.imagepicker.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/srl_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    android:padding="@dimen/dp_1">

    <com.kennie.library.imagepicker.view.SquareImageView
        android:id="@+id/iv_item_image"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@mipmap/icon_image_camera" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"
        android:text="@string/kennie_picker_camera"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

</com.kennie.library.imagepicker.view.SquareRelativeLayout>